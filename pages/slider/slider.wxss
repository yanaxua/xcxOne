/* pages/slider.wxss */

.slider,
.slider swiper,
.slider image {
  width: 100%;
  height: 200rpx;
}

.slider-navi {
  display: flex;
  flex-wrap: wrap;
}

.slider-navi .navi-item {
  width: 33.33%;
  height: 200rpx;
  border-bottom: 1rpx solid red;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  font-size: 14px;
}
.slider-navi .navi-item:nth-child(3n)::after{
  width: 0;
}
.slider-navi image {
  width: 80rpx;
  height: 80rpx;
}
.slider-home{
  display: flex;
  padding:  20rpx 30rpx;
}
.home-item{
  width: 50%;
  text-align: center;
}
.slider-home image{
  width: 320rpx;
  height: 178rpx;
}