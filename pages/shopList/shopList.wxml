<view class="shop">
	<view wx:for="{{shopList}}" wx:key="id" class="shop-item disflex">
		<view>
			<image class="shop-img" src="{{item.images[0]}}" />
		</view>
		<view class="shop-text disflex-colum">
			<text class="shop-title textEllipsis">{{item.name}}</text>
			<text class="shop-phone">电话:{{item.phone}}</text>
			<text class="shop-address">地址:{{item.address}}</text>
			<text class="shop-time">营业时间:{{item.businessHours}}</text>
		</view>
		<view class="shop-star">
			<view class="star-after">★★★★★</view>
			<view class="star-before" style="width:{{item.score}}%;">★★★★★</view>
		</view>
	</view>
</view>

